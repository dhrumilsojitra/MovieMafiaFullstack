<!-- Sidebar -->
<aside
  id="sidebar"
  class="bg-zinc-800 w-64 h-screen p-6 fixed top-0 left-0 overflow-y-auto transform -translate-x-full md:translate-x-0 transition-transform duration-300 ease-in-out z-40"
>
  <div class="flex flex-col h-full">
    <!-- Profile Section -->
    <div class="flex flex-col mb-6">
      <!-- Welcome Message -->
      <div class="mb-4 text-zinc-100 mx-auto">
        <p class="text-2xl font-bold mb-4">
          Welcome, <br />
          <span class="text-indigo-400"> <%= user.username %> </span>!
        </p>
        <div class="flex items-center space-x-4 justify-center">
          <!-- Profile picture container -->
          <div class="w-24 h-24 flex-shrink-0">
            <img
              src="/uploads/tmp/<%= user.profilepic %>"
              alt="<%= user.username %>'s profile picture"
              class="w-full h-full object-cover rounded-full border-2 border-indigo-500 shadow-md"
            />
          </div>
        </div>
      </div>

      <!-- Logout Button -->
      <a
        href="/admin/logout"
        class="bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded-md transition duration-200 flex items-center space-x-2"
      >
        <svg
          class="w-5 h-5 text-white"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 16l4-4m0 0l-4-4m4 4H3m4 4h14m-14 0a2 2 0 01-2-2V7a2 2 0 012-2m14 2a2 2 0 012 2v10a2 2 0 01-2 2"
          ></path>
        </svg>
        <span>Logout</span>
      </a>
      <!-- Sidebar Toggle Button for Mobile -->
      <button
        id="sidebar-toggle"
        class="text-zinc-100 focus:outline-none mt-4 md:hidden"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"
          ></path>
        </svg>
      </button>
    </div>

    <!-- Navigation Menu -->
    <nav class="flex-grow">
      <ul class="space-y-2">
        <li>
          <a
            href="/admin/dashboard"
            class="block px-4 py-3 text-zinc-100 hover:bg-zinc-700 rounded-md transition duration-200"
            >Dashboard</a
          >
        </li>

        <li>
          <a
            href="/admin/dashboard/addmovie"
            class="block px-4 py-3 text-zinc-100 hover:bg-zinc-700 rounded-md transition duration-200"
            >Add Movie</a
          >
        </li>
        <li>
          <a
            href="/admin/dashboard/registration"
            class="block px-4 py-3 text-zinc-100 hover:bg-zinc-700 rounded-md transition duration-200"
            >Add Admin</a
          >
        </li>
        <li>
          <a
            href="/admin/dashboard/user"
            class="block px-4 py-3 text-zinc-100 hover:bg-zinc-700 rounded-md transition duration-200"
            >Admin List</a
          >
        </li>
        <!-- Add more sidebar items here -->
      </ul>
    </nav>

    <!-- Footer Section (Optional) -->
    <div class="mt-auto">
      <p class="text-xs text-zinc-400 text-center">Â© 2024 Movie Mafia</p>
    </div>
  </div>
</aside>
