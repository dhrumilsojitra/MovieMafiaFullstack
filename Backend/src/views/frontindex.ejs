<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Movie Mafia</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body
    class="bg-zinc-900 text-zinc-200 font-sans leading-normal tracking-normal"
  >
    <!-- Loader -->
    <%- include('partials/loader') %>
    <!-- Navbar -->
    <%- include('partials/navbar') %>

    <!-- Main Content -->
    <div class="container mx-auto px-4 py-8">
      <h2 class="text-xl font-bold text-zinc-100 mb-6">Available Movies</h2>

      <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <!-- Movie Card -->

        <% if (movies && movies.length> 0) { %> <% movies.forEach(movie=> { %>
        <div class="bg-zinc-800 shadow-md rounded-lg overflow-hidden">
          <a href="view-movie/<%= movie._id %>" target="_blank">
            <img
              src="<%= movie.image %>"
              alt="Movie Image"
              class="w-full h-48 object-cover"
            />
          </a>
          <div class="p-4">
            <h3 class="text-lg font-bold text-zinc-100"><%= movie.title %></h3>
            <div class="flex flex-wrap gap-2 my-2">
              <% movie.categories.forEach(category=> { %>
              <span
                class="bg-blue-600 text-blue-100 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded"
              >
                <%= category %>
              </span>
              <% }); %>
            </div>
            <p class="text-zinc-400 h-[60px] overflow-auto">
              <%= movie.description %>
            </p>
            <div class="mt-4 flex gap-3 items-start justify-between flex-wrap">
              <div class="text-blue-400 hover:text-blue-300 font-semibold">
                <a href="<%= movie.download %>" target="_blank">Download</a>
              </div>
              <div class="text-red-500 font-semibold">
                <a
                  href="<%= movie.trailer %>"
                  target="_blank"
                  class="flex items-center gap-2"
                  ><img
                    src="/images/youtube-icon.png"
                    alt=""
                    width="20px"
                    height="20px"
                  />Watch Trailer</a
                >
              </div>
            </div>
          </div>
        </div>
        <% }) %> <% } else { %>
        <div class="bg-zinc-800 p-6 rounded-lg shadow-md text-center">
          <p class="text-zinc-400">No movies available.</p>
        </div>
        <% } %>
      </div>
    </div>
    <script src="/js/commonscript.js"></script>
  </body>
</html>
