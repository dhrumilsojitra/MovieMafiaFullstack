<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin || Registration</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-zinc-900 text-zinc-200 font-sans leading-normal tracking-normal">
  <!-- Navbar -->
  <nav class="bg-zinc-800 shadow-md">
    <div class="container mx-auto px-4 py-4 flex justify-between items-center">
      <div class="text-2xl font-bold text-zinc-100">
        <a href="/admin/dashboard" class="flex items-center">
          <img src="/images/logo.png" alt="" width="200px" height="50px">
        </a>
      </div>
      <div class="flex space-x-4">
        <a href="/admin/dashboard"
          class="bg-green-600 text-white font-semibold py-2 px-4 rounded-md hover:bg-green-500 focus:outline-none focus:ring-2 focus:ring-green-500">
          Home
        </a>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto bg-zinc-600 rounded p-6">
      <h2 class="text-2xl font-bold text-zinc-100 mb-6">
        Admin Registration
      </h2>
      <form action="/admin/dashboard/registration" method="POST" enctype="multipart/form-data">
        <!-- Username -->
        <div class="mb-4">
          <label for="username" class="block text-zinc-200 mb-2">Username</label>
          <input type="text" id="username" name="username"
            class="w-full px-3 py-2 leading-tight text-zinc-200 bg-zinc-700 rounded focus:outline-none focus:bg-zinc-800"
            placeholder="Enter your username" required />
        </div>

        <!-- Email -->
        <div class="mb-4">
          <label for="email" class="block text-zinc-200 mb-2">Email</label>
          <input type="email" id="email" name="email"
            class="w-full px-3 py-2 leading-tight text-zinc-200 bg-zinc-700 rounded focus:outline-none focus:bg-zinc-800"
            placeholder="Enter your email address" required />
        </div>

        <!-- Password -->
        <div class="mb-6">
          <label for="password" class="block text-zinc-200 mb-2">Password</label>
          <input type="password" id="password" name="password"
            class="w-full px-3 py-2 leading-tight text-zinc-200 bg-zinc-700 rounded focus:outline-none focus:bg-zinc-800"
            placeholder="Enter your password" required />
        </div>
        <!-- profile picture -->
        <div class="mb-6">
          <label for="password" class="block text-zinc-200 mb-2">Profie Picture</label>
          <input type="file" id="Profie" name="profile"
            class="w-full px-3 py-2 leading-tight text-zinc-200 bg-zinc-700 rounded focus:outline-none focus:bg-zinc-800" />
        </div>
        <% if (typeof error !=='undefined' ) { %>
          <div class="mb-4 p-4 text-red-800 bg-red-200 rounded border border-red-300">
            <%= error %>
          </div>
          <% } %>
            <!-- Submit Button -->
            <button type="submit"
              class="w-full bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
              Register
            </button>
      </form>
    </div>
  </div>
</body>

</html>